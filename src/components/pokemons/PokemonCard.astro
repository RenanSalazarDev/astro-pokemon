---

interface Props {
    name: string;
    url?: string;
    id?: string;
    isBig?: boolean;
}

const { id, name, isBig = false} = Astro.props;
/* const title = Astro.props.title;*/

/*const parts = url.split("/").filter(Boolean);
const id = parseInt(parts[parts.length - 1]);*/
---
 
<!--<a href={`pokemons/${name}`} 
class={`flex flex-col justify-center items-center p-2 ${!isBig && 'border'}`}> -->
<a href={`/pokemons/${name}`} 
class:list={[
    `rounded flex flex-col justify-center items-center p-2`,
    {
        border: !isBig,
    } 
    ]}>
    <img transition:name={`${name}-image`}
    class:list={[
        {
            'w-80 h-80': isBig,
        },
        {
            'w-30 h-30': !isBig,
        }
    ]} 
src=`https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`>

    <p class:list={[
        `capitalize`,
        {
            'text-4xl text-blue-300': isBig,
        }
    ]}>
        #{id} {name}
    </p>
</a>